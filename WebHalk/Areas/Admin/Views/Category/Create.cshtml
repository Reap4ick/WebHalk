@using WebHalk.Areas.Admin.Models.Category
@model CategoryAdminCreateViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Create Category</title>

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>

<body>


        <div class="pagetitle">
            <h1>Create Category</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Category", new { area = "Admin" })">Categories</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="container col-md-6 offset-md-3 mt-4">
                <h1 class="text-center">Create Category</h1>

                <form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-4">
                    @Html.AntiForgeryToken() <!-- Додає CSRF токен -->

                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input name="Name" class="form-control" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">Image</label>
                        <input name="Image" type="file" class="form-control" />
                        <span class="text-danger"></span>
                    </div>


                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-dark">Cancel</a>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </section>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>

</html>
